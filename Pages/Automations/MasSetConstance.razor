@inject ReportService UserlogService

@if (Elements == null)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
}
else
{
    <MudText Typo="Typo.h6" Color="Color.Primary"> @pageheader </MudText>
    <MudTable Items="@Elements"
          FixedHeader="@fixed_header"
          FixedFooter="@fixed_footer"
          Height="@(fixed_header || fixed_footer ?"500px":"")"
          Dense="@dense"
          Hover="@hover"
          Bordered="@bordered"
          Striped="@striped"
          ReadOnly="@ronly"
          CanCancelEdit="@canCancelEdit"
          Filter="new Func<SetConstance,bool>(FilterFunc)" @bind-SelectedItem="selectedItem" SortLabel="Sort By">
        <ToolBarContent>
            <MudSpacer />
            <MudTextField @bind-Value="searchString"
                      Placeholder="Search"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>

        <HeaderContent>
            <MudTh Style="@($"color:{VarGlobals.TableHeaderColor};")" ><MudTableSortLabel SortBy="new Func<SetConstance, object>(x=>x.Set_code)">CODE</MudTableSortLabel></MudTh>
            <MudTh Style="@($"color:{VarGlobals.TableHeaderColor};")" ><MudTableSortLabel SortBy="new Func<SetConstance, object>(x=>x.Set_desc)">DESCTIPTION</MudTableSortLabel></MudTh>
            <MudTh Style="@($"color:{VarGlobals.TableHeaderColor};")" ><MudTableSortLabel SortBy="new Func<SetConstance, object>(x=>x.Val_bit)">ENABLE</MudTableSortLabel></MudTh>
            <MudTh Style="@($"color:{VarGlobals.TableHeaderColor};")" >ACTION</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="CODE">@context.Set_code</MudTd>
            <MudTd DataLabel="DESCRIPTION">@context.Set_desc</MudTd>
            <MudTd DataLabel="ENABLE"><MudCheckBox @bind-Checked="@context.Val_bit" /></MudTd>
           <MudTd Class="clm-row-small" DataLabel="ACTION">
                <MudIconButton Size="@Size.Small" Icon="@Icons.Outlined.Save" Color="Color.Error" @onclick="@(()=>Commitconstance(@context.Set_code.ToString(), @context.Val_bit.Value, @context.Set_code.ToString()))" />
                <MudIconButton Size="@Size.Small" Icon="@Icons.Outlined.Refresh" Color="Color.Info" @onclick="@(()=>Refreshconstance())" />
            </MudTd>
        </RowTemplate>

        <PagerContent>
            <MudTablePager PageSizeOptions="new int[]{10,20,50,100}" />
        </PagerContent>
    </MudTable>
}

